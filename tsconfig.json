{
  "compilerOptions": {
    "target": "es6", // Or "es2015" and above
    "module": "commonjs",
    "emitDecoratorMetadata": true, // Required for TypeORM decorators
    "experimentalDecorators": true, // Required for TypeScript decorators
    "strict": true, // Optional, for stricter type checking
    "esModuleInterop": true, // Optional, for module interoperability
    "skipLibCheck": true, // Optional, to skip checking type definition files
    "outDir": "./dist",
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
